<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/hijauasin">

    <TextView
        android:id="@+id/text_header2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="IF Project"
        android:textSize="20dp"
        android:background="@color/darkcyan"
        android:textStyle="bold"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_message2"
        android:layout_below="@id/text_header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan diterima"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="openSecondActivity"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_toLeftOf="@id/button"
        android:layout_alignParentBottom="true"
        android:hint="Ketik pesan"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit "
        android:layout_centerInParent="true"
        android:onClick="implicit3"
        />

</RelativeLayout>